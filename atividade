lista = []

def adicionar_item(item):
    lista.append(item)
    print("Item adicionado.")
def remover_item(item):
    if item in lista:
        lista.remove(item)
        print("Item removido!")
    else:
        print(" Item nÃo encontrado!")

while True:
    print('1 - adicionar')
    print('2 - remover')
    print('3 - exibir')
    print('4 - sair')

    escolha = input('escolha uma opção:\n')
