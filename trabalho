lista = []

def adicionar_item(item):
    lista.append(item)
    print("Item adicionado.")
def remover_item(item):
    if item in lista:
        lista.remove(item)
        print("Item removido!")
    else:
        print(" Item nÃo encontrado!")
    

while True:
    
    print("1 - Adicionar")
    print('2 - Remover')
    print("3 - Exibir")
    print("4 - Sair")

    escolha = input("Escolha uma opção:\n")

    if escolha == "1":
        item = input("Digite o item a ser adicionado:\n ")
        adicionar_item(item)
    elif escolha == "2":
        print(lista)
        item = input("Digite o item a ser removido:\n ")
        remover_item(item)
    elif escolha == "3":
        print(lista)
    elif escolha == "4":
        break
    else:
        print("Esse número é invalido.\n.\n")
